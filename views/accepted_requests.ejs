<%- include('./partials/header') %> 

<div class="container counsellor-panel-div">

    <div class="container my-5">
        <h1 class="display-4 text-success"><i class="fa fa-thumbs-up fa-md"></i>  Accepted Requests</h1>
    </div>
    <% if(acc_req == ""){ %>
        <h3 class="display-5 text-danger"><i class="fa fa-frown-o fa-md"></i>  Sorry! No request accepted yet</h3>
    <% } %> 

    <div class="row">
        <% acc_req.forEach(function(req){ %>
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="card">
                  <center><h3 class="mt-2"><i class="fa fa-user"></i>  <%= req.name %></h3></center>
                  <div class="card-header">
                    <p class="card-text mx-1 mt-1"><strong>email id:</strong> <%= req.email %></p>
                    <p class="card-text mx-1 mt-1"><strong>Phone:</strong> <%= req.phone %></p>
                    <p class="card-text mx-1"><strong>Need help in </strong> <%= req.needHelpIn %></p>
                    <p class="card-text mx-1"><strong>Role:</strong> <%= req.role %></p>
                  </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include('./partials/footer') %>  